{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es6",
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true,
        "strict": false,
        "inlineSourceMap": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,      
        "moduleResolution": "Node",
        "types": [
            "node",
            "jest",
            "@types/jest"
        ]
    },
    "paths": {
        "tidyjs":["./packages/forms"],
        "@tidyjs/validation-decorators":["./packages/validation-decorators"],
        "@tidyjs/types":["./packages/types"]

    },
    "exclude": ["dist","./**/node_modules/**","./**/dist/**","./node_modules/**"]
}  